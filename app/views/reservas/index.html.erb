<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Nome cliente</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Endereco</th>
      <th>Data nasc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.nome_cliente %></td>
        <td><%= reserva.cpf %></td>
        <td><%= reserva.telefone %></td>
        <td><%= reserva.endereco %></td>
        <td><%= reserva.data_nasc %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

